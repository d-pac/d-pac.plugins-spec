{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://d-pac.be/schemas/assessment.json",
  "name": "assessment",
  "title": "Assessment",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "required": true,
      "description": "Unique id"
    },
    "limits": {
      "type": "object",
      "required": true,
      "properties": {
        "comparisonsNum": {
          "type": "object",
          "required": true,
          "properties": {
            "perAssessor": {
              "type": "number",
              "description": "Number of allowed/required comparisons per assessor"
            },
            "perRepresentation": {
              "type": "number",
              "description": "Number of allowed/required comparisons per representation"
            }
          }
        },
        "assessorsNum": {
          "type": "number",
          "description": "Minimum number of required assessors"
        }
      }
    },
    "stage": {
      "type": "number",
      "required": true,
      "description": "the current stage the algorithm is in"
    }
  },
  "additionalProperties": true
}